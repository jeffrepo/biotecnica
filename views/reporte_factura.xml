<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_factura">
        <t t-call="web.html_container">
            <t t-set="data_report_margin_top" t-value="10"/>
            <t t-set="data_report_header_spacing" t-value="5"/>
